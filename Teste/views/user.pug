extends layout

block content
	#fb-root
	script(async='' defer='' src='https://connect.facebook.net/pt_PT/sdk.js#xfbml=1&version=v3.2&appId=2148390798714928&autoLogAppEvents=1')

	script.
		window.fbAsyncInit = function() {
		FB.init({
		appId      : '2148390798714928',
		cookie     : true,
		xfbml      : true,
		version    : 'v3.2'
		});
		FB.AppEvents.logPageView();
		};
		(function(d, s, id){
		var js, fjs = d.getElementsByTagName(s)[0];
		if (d.getElementById(id)) {return;}
		js = d.createElement(s); js.id = id;
		js.src = "https://connect.facebook.net/en_US/sdk.js";
		fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));
	
	.w3-container
		.w3-card-4
			header.w3-container.w3-blue-grey
				h3 Perfil de Utilizador

			.w3-container
				h4 Informações pessoais
				table.w3-table-all
					each u in user
						tr
							th Email
							td= u.username
						tr
							if u.idGoogle
								th ID Google
								td= u.idGoogle
						tr
							if u.idFacebook
								th ID Facebook
								td= u.idFacebook
						tr
							if u.idGithub
								th ID Github
								td= u.idGithub
						tr
							if u.idTwitter
								th ID Twitter
								td= u.idTwitter
			hr
			.w3-container
				h4 Associar contas

			.w3-container
				//Google
				.g-signin2(data-onsuccess='addAccount' data-failure='onFailure' data-theme='dark')
				script(src="javascripts/googlescript.js")
				//a(href='' onclick='signOut();') Sign out
				script.
					function signOut() {
						var auth2 = gapi.auth2.getAuthInstance();
						auth2.signOut().then(function () {
							console.log('User signed out.');
						});
					}
				
				//Facebook
				//fb:login-button(scope='public_profile, email' onlogin='checkLoginState();' data-size='large' data-button-type='login_with' data-auto-logout-link='true' data-use-continue-as='false')
				fb:login-button(scope='public_profile' onlogin='checkLoginState();')
				br
				//a(href='' onclick='logOut();') Log out
				script.
					function checkLoginState() {
						FB.getLoginStatus(function(response) {
							console.log(response);
							if(response.status === 'connected'){
								testAPI();
							}
						});
					}
					function logOut() {
						FB.logout(function(response){
							console.log(response)
						})
					}
					function testAPI(){
						FB.api('/me', {fields: 'name'}, function(response){
							console.log(response)
							console.log('Logged in as: ' + response.name)
						})
					}

				//Github
				a(href='http://localhost:3000/login/loginGithub') LOGIN GITHUB
				br

				//Twitter
				a(href='http://localhost:3000/login/loginTwitter') LOGIN TWITTER
